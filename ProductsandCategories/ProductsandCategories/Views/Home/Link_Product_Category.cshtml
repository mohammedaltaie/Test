@model ProductsandCategories.Models.Products_and_Categories

<h4>Add Category to Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Link_Product_Category">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="ProductsId" value="@ViewBag.ProductId" />



            <div class="form-group">

                <label asp-for="CategoriesId" class="control-label"></label>

                <select asp-for="CategoriesId" class="form-control">

                    @foreach (var item in ViewBag.Categories)

                    {
                        <option value="@item.CategoriesId">@item.Name</option>
                    }

                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>

        </form>

    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
  