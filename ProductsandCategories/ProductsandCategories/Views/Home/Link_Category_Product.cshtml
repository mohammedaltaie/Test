@model ProductsandCategories.Models.Products_and_Categories

    <h4>Add product to Category</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Link_Category_Product">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="CategoriesId" value="@ViewBag.CategoriesId" />



            <div class="form-group">

                <label asp-for="ProductsId" class="control-label"></label>

                <select asp-for="ProductsId" class="form-control">

                    @foreach (var item in ViewBag.Products)

                    {
                        <option value="@item.ProductsId">@item.Name</option>
                    }

                </select>

            </div>



            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>

        </form>

    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
